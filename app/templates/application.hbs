<div class="container">
  <div class="page-header">
    <h1>Songbryd...</h1>
    <h2>Sing Me a Ditty Songbryd
      <small>...By Don McLamb</small>
    </h2>

  </div>
  <div class="row">
    <div class="container col-md-6">
      <h2 id="title">Pick your sound.</h2>


      <ul class="list-group">
        {{#each songs as |song|}}
        <li class="list-group-item">{{song.title}} by <em>{{song.band}}</em>
          <span class="rating pull-right">{{song.rating}}</span>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>




{{outlet}}
